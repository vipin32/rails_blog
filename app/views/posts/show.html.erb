<% content_for :page_title, @post.title %>

<section class="section">
    <div class="container">
        <div class="level">
            <!--Left Side -->
            <div class="level-left">
                <div class="level-item">
                    <strong>Actions</strong>
                </div>
            </div>

            <!--Right Side -->
            <div class="level-right">
                <div class="level-item">
                    <%= link_to "Edit", edit_post_path(@post), class: "button" %>
                </div>

                <div class="level-item">
                    <%= button_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete ?"}, class: "button is-danger" %>
                </div>
            </div>
        </div>

        <!-- Post content -->
        <div class="content">
            <%= @post.content %>
        </div>    
    </div>
</section>

<section class="section comments">
    <div class="container">
        <h2 class="subtitle is-4"><%= @post.comments.count %> comments</h1>

        <%= render @post.comments %>

        <div class="comment-form">
            <hr />
            <h3 class="subtitle is-4">Leave a reply</h3>

            <%= render 'comments/form' %>
        </div>
    </div>

</section>
